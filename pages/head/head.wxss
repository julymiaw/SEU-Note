/* pages/head/head.wxss */
.search{
    border-bottom: solid 2rpx #efefef;
    height: 40rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.headline text{
    font-size: small;
}

swiper{
    height: 350rpx;
}
swiper image{
    width: 100%;
    height: 100%;
}

.function-list{
    display: flex;
    
    border-bottom: #707070 solid 2rpx;
    margin: 10rpx;

}
.function-item{
    height: 200rpx;
    width: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.function-item image{
    width: 140rpx;
    height: 140rpx;
}

.function-item text{
    font-size: 30rpx;
    margin: 4rpx;
}

.function-plate{
    border-bottom: #707070 solid 2rpx;
    display: flex;
}

.combine{
    padding: 20rpx 10rpx;
}
.latest{
    height: 282rpx;
    width: 212rpx;
    background-color: #97BFBF;
    display: flex;
    align-items: center;
    justify-content: center;
    border: #F7F3F3 solid 20rpx;
    margin: 20rpx;
    border-radius: 20rpx;
    box-shadow: 1rpx 1rpx 15rpx #ddd;
}

.latest text{
    font-size: 72rpx;
    margin: 0rpx auto;
    line-height: 100rpx;
    width: 72rpx;
    color: #707070;
    border-radius: 8rpx;
}

.hottest{
    height: 128rpx;
    width: 370rpx;
    background-color: #C8A4A8;
    display: flex;
    align-items: center;
    justify-content: center;
    border: #F7F3F3 solid 20rpx;
    border-radius: 20rpx;
    margin: 10rpx;
    box-shadow: 1rpx 1rpx 15rpx #ddd;
}

.hottest text{
    font-size: 54rpx;
    color: #707070;
}

.recommend{
    height: 128rpx;
    width: 370rpx;
    background-color: #C8A4C8;
    display: flex;
    align-items: center;
    justify-content: center;
    border: #F7F3F3 solid 20rpx;
    border-radius: 20rpx;
    margin: 10rpx;
    box-shadow: 1rpx 1rpx 15rpx #ddd;
}

.recommend text{
    font-size: 54rpx;
    color: #707070;
}

.user{
    display: flex;

}
.user-id{
    display: flex;
    align-items: center;
    margin-top: 20rpx;
}
.user-id image{
    width: 80rpx;
    height: 80rpx;
}
.user-id text{
    color: #707070;
    font-size: 40rpx;
}

.subscribe{
    height: 80rpx;
    width: 128rpx;
    margin-top: 20rpx;
    margin-left:auto;
}
.text{
    margin: 20rpx;
    height: 200rpx;
    border: solid 2rpx #707070;
}
.text text{
    color: #707070;
}